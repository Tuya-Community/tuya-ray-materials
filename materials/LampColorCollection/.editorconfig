# http://editorconfig.org
root = true

[*]
quote_type = single # Fix Prettier "prettier.singleQuote" not working in 1.40 vs code
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true


[*.md]
max_line_length = 0
trim_trailing_whitespace = false


[COMMIT_EDITMSG]
max_line_length = 100


[Makefile]
indent_style = tab
tab_width = 2


[.gitmodules]
indent_style = tab
tab_width = 2

[project.tuya.json]
insert_final_newline = false
