    "@ray-js/cli": "^1.5.42",
    "@ray-js/panel-sdk": "^1.13.1",
    "@ray-js/ray": "^1.5.42",
    "@ray-js/types": "^0.6.14",
    "@types/node": "^17.0.43",
    "core-js": "^3.19.1",
    "eslint-config-tuya-panel": "^0.4.1",
    "husky": "^1.2.0",
    "lint-staged": "^10.2.11",
    "standard-version": "9.3.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS --config commitlint.config.js",
