{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "lib": ["ESNext", "DOM"],
    "declaration": false,
    "declarationMap": false,
    "emitDeclarationOnly": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmitOnError": false,
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./functional/*"],
      "@/typings/*": ["./typings/*"]
    },
    "typeRoots": ["./node_modules/@types", "./types", "./typings"]
  },
  "include": ["./functional/**/*.*", "./typings", "./types/index.d.ts"],
  "exclude": ["node_modules", "dist"]
}
