{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "lib": ["ESNext", "DOM"],
    "declaration": false,
    "declarationMap": false,
    "emitDeclarationOnly": false,
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmitOnError": false,
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "ray": ["./node_modules/@ray-js/ray"],
      "@/*": ["./src/*"],
      "@ray-js/robot-map-component/*": ["node_modules/@ray-js/robot-map-component/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./typings",
      "./node_modules/@tuya-miniapp",
      "./node_modules/@ray-js/robot-protocol"
    ]
  },
  "include": ["src/**/*.*", "ray/**/*.*", "typings"],
  "exclude": ["node_modules", "dist"]
}
